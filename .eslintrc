{
  "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "jsx-a11y",
    "react"
  ],
  "rules": {
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  },
  "settings": {
    "import/resolve": {
      "extensions": [ ".js", ".jsx" ]
    }
  }
}
